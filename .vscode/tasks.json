                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--",
                "-j",
            ],
            "problemMatcher": [],
            "dependsOn": "CMake Configure Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
